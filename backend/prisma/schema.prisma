// Prisma Schema for AetheraOS
// Database: PostgreSQL (Railway)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Profile
model User {
  id        String   @id @default(cuid())
  address   String   @unique // Wallet address (lowercase)
  displayName String?
  email     String?
  bio       String?
  avatar    String?

  // Preferences
  theme     String   @default("dark")
  notifications Boolean @default(true)
  emailNotifications Boolean @default(false)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime?

  // Relations
  tasks     Task[]
  agents    Agent[]
  chatMessages ChatMessage[]

  @@index([address])
}

// Task (syncs with blockchain)
model Task {
  id          String   @id @default(cuid())
  taskId      String?  @unique // Blockchain task ID

  // Task details
  title       String
  description String
  budget      String   // ETH amount
  deadline    DateTime?

  // Status
  status      String   @default("OPEN") // OPEN, CLAIMED, SUBMITTED, VERIFIED, COMPLETED, DISPUTED

  // Blockchain data
  requester   String   // Wallet address
  worker      String?  // Wallet address
  proofHash   String?  // IPFS hash
  txHash      String?  // Transaction hash

  // Metadata
  agentId     String?
  operation   String?
  params      Json?
  result      Json?

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  claimedAt   DateTime?
  submittedAt DateTime?
  completedAt DateTime?

  // Relations
  user        User     @relation(fields: [requester], references: [address])

  @@index([requester])
  @@index([worker])
  @@index([status])
  @@index([taskId])
  @@index([requester, status]) // Combined query optimization
  @@index([createdAt]) // Ordering optimization
}

// Agent (registered on Edenlayer)
model Agent {
  id          String   @id @default(cuid())
  agentId     String?  @unique // Edenlayer agent ID

  // Agent details
  name        String
  description String
  endpoint    String   // MCP URL
  imageUrl    String?

  // Configuration
  capabilities String[] // Array of capabilities
  pricingModel String   @default("x402") // x402, flat
  priceAmount  String?  // Price in ETH

  // Status
  status      String   @default("active") // active, inactive, suspended

  // Ownership
  owner       String   // Wallet address

  // Stats
  totalCalls  Int      @default(0)
  totalRevenue String  @default("0")

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastUsed    DateTime?

  // Relations
  user        User     @relation(fields: [owner], references: [address])

  @@index([owner])
  @@index([status])
  @@index([agentId])
  @@index([owner, status]) // Combined query optimization
}

// Chat Room
model ChatRoom {
  id          String   @id @default(cuid())
  roomId      String?  @unique // Edenlayer room ID

  // Room details
  name        String
  description String?
  type        String   @default("CHAT") // CHAT, AGENT, TASK

  // Settings
  private     Boolean  @default(false)
  maxParticipants Int?

  // Metadata
  participants String[] // Array of wallet addresses

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastMessage DateTime?

  // Relations
  messages    ChatMessage[]

  @@index([roomId])
}

// Chat Message
model ChatMessage {
  id          String   @id @default(cuid())

  // Message data
  content     String
  sender      String   // Wallet address

  // Metadata
  messageType String   @default("text") // text, system, file
  metadata    Json?

  // Timestamps
  createdAt   DateTime @default(now())

  // Relations
  room        ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId      String
  user        User     @relation(fields: [sender], references: [address])

  @@index([roomId])
  @@index([sender])
  @@index([createdAt])
}

// IPFS Upload
model IPFSUpload {
  id          String   @id @default(cuid())

  // IPFS data
  cid         String   @unique // Content ID
  filename    String
  filesize    Int      // Bytes
  mimetype    String?

  // Upload metadata
  uploader    String   // Wallet address
  purpose     String?  // work_proof, agent_metadata, etc.

  // Related entities
  taskId      String?
  agentId     String?

  // Timestamps
  createdAt   DateTime @default(now())
  pinnedUntil DateTime? // Pinata expiry

  @@index([uploader])
  @@index([cid])
  @@index([taskId])
}

// Analytics Event
model AnalyticsEvent {
  id          String   @id @default(cuid())

  // Event data
  eventType   String   // task_created, agent_deployed, tool_called, etc.
  userAddress String?

  // Event metadata
  data        Json?

  // Timestamps
  createdAt   DateTime @default(now())

  @@index([eventType])
  @@index([userAddress])
  @@index([createdAt])
}

// Agent Conversation (for autonomous agent chat history)
model AgentConversation {
  id          String   @id @default(cuid())
  
  // User
  userId      String   // Wallet address
  
  // Conversation details
  title       String?  // Auto-generated from first message
  
  // Metadata
  metadata    Json?    // Store plan, costs, execution results, etc.
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  messages    AgentMessage[]
  
  @@index([userId])
  @@index([updatedAt])
}

// Agent Message (individual messages in a conversation)
model AgentMessage {
  id              String   @id @default(cuid())
  
  // Conversation
  conversationId  String
  conversation    AgentConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  
  // Message data
  role            String   // 'user' | 'agent' | 'system'
  content         String   @db.Text
  
  // Metadata
  metadata        Json?    // Store execution results, costs, tool calls, etc.
  
  // Timestamps
  createdAt       DateTime @default(now())
  
  @@index([conversationId])
  @@index([createdAt])
}

// Marketplace Agent (for agent marketplace)
model MarketplaceAgent {
  id          String   @id @default(cuid())
  
  // Agent details
  name        String
  description String
  category    String   @default("General")
  
  // Creator
  creator     String   // Wallet address
  
  // Endpoint
  endpoint    String   // Agent URL
  imageUrl    String?
  
  // Pricing
  price       String   @default("0.0001") // ETH
  
  // Stats
  rating      Float    @default(0)
  usageCount  Int      @default(0)
  
  // Status
  verified    Boolean  @default(false)
  status      String   @default("active") // active, inactive
  
  // Capabilities
  capabilities String[]
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  reviews     AgentReview[]
  
  @@index([creator])
  @@index([category])
  @@index([verified])
  @@index([rating])
}

// Agent Review
model AgentReview {
  id        String   @id @default(cuid())
  
  // Agent
  agentId   String
  agent     MarketplaceAgent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  // User
  userId    String   // Wallet address
  
  // Review
  rating    Int      // 1-5
  comment   String?
  
  // Timestamps
  createdAt DateTime @default(now())
  
  @@index([agentId])
  @@index([userId])
  @@unique([agentId, userId]) // One review per user per agent
}

// Agent Deployment
model AgentDeployment {
  id            String   @id @default(cuid())
  
  // Deployment details
  name          String
  description   String
  template      String   // Template ID
  
  // Configuration
  config        Json?    // Deployment config
  
  // Owner
  owner         String   // Wallet address
  
  // Status
  status        String   @default("pending") // pending, deploying, deployed, failed, undeployed
  endpoint      String?  // Deployed URL
  error         String?  // Error message if failed
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deployedAt    DateTime?
  undeployedAt  DateTime?
  
  @@index([owner])
  @@index([status])
}

// Webhook Subscription
model WebhookSubscription {
  id          String   @id @default(cuid())

  // Subscription details
  url         String
  events      String[] // Array of event types to listen for
  secret      String   // HMAC secret for verification

  // Owner
  owner       String   // Wallet address

  // Status
  active      Boolean  @default(true)
  lastTriggered DateTime?
  failureCount Int      @default(0)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([owner])
  @@index([active])
}
