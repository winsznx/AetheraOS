# Moralis API (EVM chains - Base, Ethereum)
# Get from: https://admin.moralis.io/
MORALIS_API_KEY=your_moralis_api_key_here

# Helius API (Solana)
# Get from: https://www.helius.dev/
HELIUS_API_KEY=your_helius_api_key_here

# Anthropic Claude API (AI insights)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alchemy API (Optional - for advanced EVM analytics)
# Get from: https://www.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Thirdweb (x402 payment protocol)
# Get from: https://thirdweb.com/dashboard
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# Platform wallet address (receives payments)
PLATFORM_WALLET=0x_your_wallet_address_here

# Pinata (IPFS file storage)
# Get from: https://app.pinata.cloud/keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_here

# Polymarket API (OPTIONAL - for advanced prediction markets)
# The Polymarket Gamma API is publicly accessible without authentication.
# However, you may get an API key from Polymarket Builders Program for:
# - Higher rate limits
# - Access to premium endpoints
# Get from: https://polymarket.com/builders
# If you don't have one, leave empty - public access will be used.
POLYMARKET_API_KEY=

# Network (testnet or mainnet)
NETWORK=testnet
