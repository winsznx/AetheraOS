{
  "name": "Prediction Market Agent",
  "description": "AI Agent for prediction markets - analyze odds, place bets, track positions on-chain. Supports Polymarket, Azuro, and direct on-chain betting.",
  "defaultPrompt": "I can help you analyze prediction markets, find value bets, and manage your positions. What markets are you interested in?",
  "imageUrl": "https://via.placeholder.com/400x300?text=Prediction+Market+Agent",
  "backgroundImageUrl": "",
  "websiteUrl": "https://github.com/nullshot/prediction-market-agent",
  "mcpUrl": "https://prediction-market-agent.timjosh507.workers.dev/mcp",
  "chatUrl": "",
  "capabilities": {
    "tools": [
      {
        "name": "get-market-data",
        "description": "Fetch prediction market data including odds, liquidity, and volume",
        "inputSchema": {
          "type": "object",
          "properties": {
            "marketId": {
              "type": "string",
              "description": "Market ID or slug (e.g., 'trump-2024', 'btc-100k')"
            },
            "source": {
              "type": "string",
              "enum": ["polymarket", "azuro", "onchain"],
              "description": "Data source to query"
            }
          },
          "required": ["marketId"]
        }
      },
      {
        "name": "analyze-market",
        "description": "Analyze prediction market odds to find value bets and arbitrage opportunities",
        "inputSchema": {
          "type": "object",
          "properties": {
            "marketId": {
              "type": "string",
              "description": "Market ID to analyze"
            },
            "threshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Probability threshold for value bets (default: 0.1)"
            }
          },
          "required": ["marketId"]
        }
      },
      {
        "name": "place-bet",
        "description": "Place a bet on a prediction market outcome using smart contracts",
        "inputSchema": {
          "type": "object",
          "properties": {
            "marketId": {
              "type": "string",
              "description": "Market ID"
            },
            "outcome": {
              "type": "string",
              "description": "Outcome to bet on (e.g., 'Yes', 'No')"
            },
            "amount": {
              "type": "number",
              "description": "Bet amount in USD or base currency"
            },
            "walletAddress": {
              "type": "string",
              "description": "User wallet address"
            },
            "slippage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Max slippage percentage (default: 1%)"
            }
          },
          "required": ["marketId", "outcome", "amount", "walletAddress"]
        }
      },
      {
        "name": "get-positions",
        "description": "Fetch user positions across all prediction markets",
        "inputSchema": {
          "type": "object",
          "properties": {
            "walletAddress": {
              "type": "string",
              "description": "User wallet address"
            },
            "status": {
              "type": "string",
              "enum": ["active", "settled", "all"],
              "description": "Filter by position status"
            }
          },
          "required": ["walletAddress"]
        }
      },
      {
        "name": "calculate-pnl",
        "description": "Calculate profit and loss for a specific position or market",
        "inputSchema": {
          "type": "object",
          "properties": {
            "marketId": {
              "type": "string",
              "description": "Market ID"
            },
            "walletAddress": {
              "type": "string",
              "description": "User wallet address"
            },
            "includeUnrealized": {
              "type": "boolean",
              "description": "Include unrealized PnL (default: true)"
            }
          },
          "required": ["marketId", "walletAddress"]
        }
      },
      {
        "name": "get-trending-markets",
        "description": "Get list of trending prediction markets by volume and activity",
        "inputSchema": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "number",
              "minimum": 1,
              "maximum": 50,
              "description": "Number of markets to return (default: 10)"
            },
            "category": {
              "type": "string",
              "enum": ["all", "crypto", "politics", "sports", "entertainment"],
              "description": "Filter by category"
            }
          }
        }
      }
    ],
    "tags": ["prediction-markets", "defi", "web3", "trading", "analytics"]
  }
}
